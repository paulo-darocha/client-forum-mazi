export async function getTopCategorias(): Promise<Array<CategoriaTopico>> {
  const promise = new Promise<Array<CategoriaTopico>>((res, rej) => {
    setTimeout(() => {
      const topCategories = [];
      const js = new CategoriaTopico(
        "1",
        "Programação",
        "How can I learn JavaScript"
      );
      topCategories.push(js);
      const node = new CategoriaTopico(
        "2",
        "Programação",
        "How can I learn Node"
      );
      topCategories.push(node);
      const react = new CategoriaTopico(
        "3",
        "Programação",
        "How can I learn React"
      );
      topCategories.push(react);
      const french = new CategoriaTopico(
        "4",
        "Culinária",
        "How do I learn French cuisine?"
      );
      topCategories.push(french);
      const italian = new CategoriaTopico(
        "5",
        "Culinária",
        "How do I learn Italian cuisine?"
      );
      topCategories.push(italian);
      const soccer = new CategoriaTopico(
        "6",
        "Esportes",
        "How can I learn to play Soccer"
      );
      topCategories.push(soccer);
      const basketball = new CategoriaTopico(
        "7",
        "Esportes",
        "How can I learn to play Basketball"
      );
      topCategories.push(basketball);
      const baseball = new CategoriaTopico(
        "8",
        "Esportes",
        "How can I learn to play Baseball"
      );
      topCategories.push(baseball);

      res(topCategories);
    }, 500);
  });
  return promise;
}

