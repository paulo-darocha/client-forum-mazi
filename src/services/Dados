const usuario = new IUsuario("7", "teste@teste.com", "teste1")

export async function getCategorias(): Promise<Array<Categoria>> {
  const promise = new Promise<Array<Categoria>>((res, rej) => {
    setTimeout(() => {
      const categories = [];
      const programming = new Categoria("1", "Programação");
      categories.push(programming);
      const cooking = new Categoria("2", "Culinária");
      categories.push(cooking);
      const sports = new Categoria("3", "Esportes");
      categories.push(sports);
      const entertainment = new Categoria("4", "Entretenimento");
      categories.push(entertainment);
      const travel = new Categoria("5", "Viagens");
      categories.push(travel);

      res(categories);
    }, 500);
  });
  return promise;
}

